{
  "compilerOptions": {
    "declaration": true,
    "lib": [ "es6", "dom" ],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./bin",
    "pretty": true,
    "removeComments": false,
    "resolveJsonModule" : true,
    "sourceMap": true,
    "target": "es2018",
    "esModuleInterop": true
  },
    "exclude": [
      "node_modules",
      "bin"
    ]
}